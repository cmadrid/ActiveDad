<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    tools:context="ec.edu.espol.integradora.dadtime.ProfileThirdActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="¿Cuántos hijos tienes?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#8b8b8b"
        android:textAlignment="center"
        android:text="Las sugerencias y actividades que te brindará la aplicación será basado en tus hijos." />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3.40">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_list"
            android:dividerHeight="0.2dp"
            android:scrollbars="vertical"
            android:id="@+id/lvSons" />

        <com.shamanland.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/lvSons"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_add"
            app:floatingActionButtonColor="@color/colorPrimary"
            android:id="@+id/fabAddSons" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:text="Finalizar"
            android:background="@drawable/button"
            android:id="@+id/btnFinalize" />

    </RelativeLayout>

</LinearLayout>
