<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:gravity="center_vertical"
    tools:context="ec.edu.espol.integradora.dadtime.ProfileFirstActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:imeOptions="actionDone"
        android:hint="@string/name"
        android:id="@+id/textName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:hint="@string/user"
        android:id="@+id/txtUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Horario de trabajo"
        android:textColor="#000000"
        android:layout_marginTop="25px"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/btnSunday" />

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="L"
            android:id="@+id/btnMonday" />

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/btnTuesday" />

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/btnWednesday" />

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="J"
            android:id="@+id/btnThursday" />

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="V"
            android:id="@+id/btnFriday" />

        <Button
            android:layout_width="53px"
            android:layout_height="wrap_content"
            android:text="S"
            android:id="@+id/btnSaturday" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/entryTime"
        android:id="@+id/txtEntryTime"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/exitTime"
        android:id="@+id/txtExitTime" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ­a libre"
        android:id="@+id/cbFreeDay" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:id="@+id/btnNext" />

    </LinearLayout>

</LinearLayout>
