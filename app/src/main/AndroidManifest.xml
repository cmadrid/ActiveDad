<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ec.edu.espol.integradora.dadtime">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ProfileGlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ProfileFirstActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileSecondActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TransparentActivity"
            android:excludeFromRecents="false"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Transparent"></activity>

        <service android:name=".ServiceBackground" />

        <activity android:name=".EntertainmentActivity"></activity>
    </application>

</manifest>
